# Subtitle Embedding & Retrieval System Configuration

# Model Configuration
MODEL_NAME=BAAI/bge-large-en-v1.5
MODEL_CACHE_DIR=~/.cache/huggingface

# Processing Configuration
BATCH_SIZE=128
CHUNK_SIZE=300
CHUNK_OVERLAP=60
MIN_CHUNK_SIZE=50

# Vector Database Configuration
VECTOR_DB_PATH=./data/vector_db
COLLECTION_NAME=subtitle_embeddings

# Device Configuration
DEVICE=auto  # Options: auto, cpu, cuda
CUDA_VISIBLE_DEVICES=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Performance Configuration
# MAX_WORKERS: Number of parallel workers
#   -1 = Auto-detect based on system resources and MAX_WORKERS_PERCENTAGE
#   0+ = Fixed number of workers
MAX_WORKERS=-1

# MAX_WORKERS_PERCENTAGE: Percentage of system resources to use when MAX_WORKERS=-1
#   Range: 0.0 to 1.0 (e.g., 0.75 = use 75% of available CPU cores)
#   Only used when MAX_WORKERS=-1
#   Also controls PyTorch threading for embedding generation
MAX_WORKERS_PERCENTAGE=0.75

ENABLE_CHECKPOINTING=true
CHECKPOINT_INTERVAL=1000

